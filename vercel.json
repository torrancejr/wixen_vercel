{
  "version": 2,
  "builds": [
    {
      "src": "src/api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/src/api/$1" }
  ]
}
